# string methods

name = input ("What is your name?: ")

print(f"Name length: {len(name)}")

result = name.find(" ")
print(f"Position of first ( ): {result}")

result = name.rfind("e")
print(f"Position of last (e): {result}")

#find() and rfind() return -1 if the thing that they're looking for is not exist.

result = name.capitalize()
print(f"First letter capitalized: {name} -> {result}")

result = name.upper()
print(f"All letters upper: {name} -> {result}")

result = name.lower()
print(f"All letters lower: {name} -> {result}")

result = name.isdigit()
print(f"Is name only contains numbers?: {result} ({name})")

result = name.isalpha()
print(f"Is name only contains alphabets?: {result} ({name})")

#phone number tester
phone_number = input("Enter phone number (XXX XXX XXXX or XXX-XXX-XXXX): ")
phone_number = phone_number.replace(" ", "-")
if phone_number.isdigit() and len(phone_number) == 12:
    print(f"Phone number is valid!: {phone_number}")
else:
    print(f"Phone number is invalid!: {phone_number}")

phone_number = input("Enter your phone number: ")
result = phone_number.count("-")
print(result)
phone_number = phone_number.replace("-", " ")
print(phone_number)

