#tutorial code
user_name = input("Enter your name: ")
if len(user_name) > 12:
    print(f"Username can't be longer than 12 characters.")
elif not user_name.find(" ") == -1:
    print(f"Username can't contain spaces.")
elif not user_name.isalpha():
    print(f"Username can't contain anything but letters.")
else:
    print("Username is valid!")
